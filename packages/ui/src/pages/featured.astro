---

<Layout content={content} containerClassName="p-4">
	<h1 class="text-4xl font-bold mb-4">Featured</h1>

	<div class="grid 2xl:grid-cols-2 gap-4">
		{tableMetas.map(() => (
			<div class="overflow-x-auto w-full">
				<table class="table w-full">
					<thead>
						<tr>
							<th>Name</th>
							<th>Job</th>
							<th>Job</th>
							<th>Job</th>
							<th>Job</th>
							<th>Job</th>
							<th>Job</th>
						</tr>
					</thead>

					<tbody>
						{Array.from({length: 5}).map(() => (
							<tr>
								<td class='sticky left-0'>
									<div class="flex items-center space-x-3">
										<div class="avatar">
											<div class="mask mask-squircle w-12 h-12">
												<img src="https://picsum.photos/200" alt="Stock image" />
											</div>
										</div>
										<div class='hidden md:flex md:flex-col'>
											<div class="font-bold">Hart Hagerty</div>
											<div class="text-sm opacity-50">United States</div>
										</div>
									</div>
								</td>
								<td>Purple</td>
								<td>Purple</td>
								<td>Purple</td>
								<td>Purple</td>
								<td>Purple</td>
								<td>Purple</td>
							</tr>
						))}
					</tbody>
				</table>
			</div>
		))}
	</div>
</Layout>
