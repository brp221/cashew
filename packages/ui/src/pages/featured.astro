---
import Layout from '../layouts/Layout.astro';

const content = {
	title: 'Cashew: Featured'
};

const tableMetas = [
	{
		name: '',
		cols: ['', 'Name', 'Job', 'Favorite Color']
	},
	{
		name: '',
